{
    "name": "llamascript",
    "patterns": [
        {
            "name": "entity.name.function.llamascript",
            "match": "\\b(save|use|chat|prompt|system)\\b"
        },
        {
            "name": "macro.llamascript.stream",
            "match": "#\\[stream\\((true|false)\\)\\]"
        },
        {
            "name": "macro.llamascript.input",
            "match": "#\\[input\\((true|false)\\)\\]"
        },
        {
            "name": "string.llamascript",
            "match": "\"(?:\\.|[^\"\\n])*\""
        },
        {
            "name": "constant.numeric.llamascript",
            "match": "\\b\\d+(?:\\.\\d+)?\\b"
        },
        {
            "name": "comment.line.llamascript",
            "match": "//.*$"
        },
        {
            "name": "comment.block.llamascript",
            "begin": "/\\*",
            "end": "\\*/"
        }
    ],
    "scopeName": "source.llamascript"
}